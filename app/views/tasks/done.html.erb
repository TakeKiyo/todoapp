<h1>完了済みタスク一覧</h1>


<table>
  <thead>
    <tr>
      <th>やったこと　</th>
      <th>締め切り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '戻す', [:unfinish, task],:method => :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスク作成', new_task_path %>
